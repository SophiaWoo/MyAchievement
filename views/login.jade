extends layout

block body
    div.login-main
        div.bg
            div.login-header
                p.header-my My
                p.header-am Achievements
            form(method='post')
                div.input-field
                    div.form-group
                        label(for='userid') 用户名
                        input(type="text" name="userid" autofocus placeholder="请输入您的用户名...")
                        span.error
                    div.form-group
                        label(for='password') 密码
                        input(type="password" name="password" placeholder="请输入您的密码...")
                        span.error #{error}
                    div.checkbox-control
                        input(type='checkbox' name='remember')
                        label 记住密码
                    div.login-btn
                        button.login-button(type='submit') 登录